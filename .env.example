# ===========================================
# Outcome Runtime — Environment Variables
# ===========================================
# Copy this file to .env and fill in values

# Core
DATABASE_URL=postgresql://postgres:outcome_runtime_dev@localhost:5432/outcome_runtime
REDIS_URL=redis://localhost:6379
API_SECRET=change-me-to-a-random-string
APP_URL=http://localhost:3000

# Database (for docker-compose)
DB_PASSWORD=outcome_runtime_dev

# Encryption (for stored API keys and OAuth tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=change-me-generate-a-32-byte-hex-key

# LLM Providers (system-level default for hypothesis engine)
ANTHROPIC_API_KEY=

# Feature Flags (optional)
LAUNCHDARKLY_SDK_KEY=

# Notifications (optional)
SLACK_BOT_TOKEN=

# OAuth — LLM Account Mode (optional, Phase 2)
ANTHROPIC_OAUTH_CLIENT_ID=
ANTHROPIC_OAUTH_CLIENT_SECRET=
OPENAI_OAUTH_CLIENT_ID=
OPENAI_OAUTH_CLIENT_SECRET=
PERPLEXITY_OAUTH_CLIENT_ID=
PERPLEXITY_OAUTH_CLIENT_SECRET=
