{
  "name": "outcome-runtime",
  "version": "0.1.0",
  "private": true,
  "description": "The infrastructure layer that replaces sprint-based execution with outcome-driven experimentation.",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:ci": "turbo test -- --coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml}\"",
    "typecheck": "turbo typecheck",
    "db:generate": "pnpm --filter @outcome-runtime/core db:generate",
    "db:migrate": "pnpm --filter @outcome-runtime/core db:migrate",
    "db:studio": "pnpm --filter @outcome-runtime/core db:studio",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.0",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
